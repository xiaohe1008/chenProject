<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper   
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"  
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.igeek.dao.IMusicDao">
	<!-- 配置查询方法 -->
	<!-- mybatis通过OGNL表达式访问参数 -->
	<!-- 查询所有歌曲-->
	<select id="findAll" resultType="Music">
		select * from music
	</select>
	
	<select id="findById" resultType="Music">
		select * from music where musicId=#{musicId}
	</select>
	
	<select id="findByName" resultType="Music">
		select * from music where musicName=#{musicName}
	</select>
	
	<select id="findBySinger" resultType="Music">
		select * from music where singer=#{singer}
	</select>
	
	<select id="findBySpecialId" resultType="Music">
		select * from music where specialId=#{specialId}
	</select>

	<select id="findByMusicListId" resultType="Music">
		select music.* from music inner join musiclistInfo on music.musicId=musiclistInfo.musicId where musiclistId=#{musicListId}
	</select>
	
	<select id="findByTop" resultType="Music">
		select * from music limit 0,#{amount}
	</select>
	
</mapper>